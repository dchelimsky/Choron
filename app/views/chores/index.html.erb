<h1>Listing chores</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Due date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chores.each do |chore| %>
  <tr>
    <td><%= chore.name %></td>
    <td><%= chore.due_date %></td>
    <td><%= link_to 'Show', chore %></td>
    <td><%= link_to 'Edit', edit_chore_path(chore) %></td>
    <td><%= link_to 'Destroy', chore, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
    <td><%= link_to 'Take', "chores/take/"+chore.id.to_s %></td>
    <td><%= link_to 'Make Auction', "auctions/new/for_chore/"+chore.id.to_s %></td>
  </tr>
<% end %>
</table>

