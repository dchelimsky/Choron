<tr>
  <td><%= chore.name %></td>
  <%if chore.auction %>
    <td>
      <%= chore.auction.lowest %>
      <span class="quickbid">
        <a id="<%= "quickbidlink" + chore.auction.id.to_s %>"
           onclick="<%= "toggleQB(" + chore.auction.id.to_s + ")"%>">Bid</a><br />
        <form class="quickbidform" id="<%= "quickbid" +
           chore.auction.id.to_s %>" action="/bids" method="post">
          <input id="<%= "bid_amount" + chore.auction.id.to_s %>"
          name="bid[amount]" type="number" />
          <input id="<%= "bid" + chore.auction.id.to_s %>"
          type="submit" value="Bid" />
          <input id="bid_auction_id" name="bid[auction_id]"
          type="hidden" value="<%= chore.auction.id.to_s %>" />
          <input id="bid_user_id" name="bid[user_id]"
          type="hidden" value="<%= current_user.id %>" />
        </form>
      </span>
    </td>
    <td><%= chore.auction.expiration_date.strftime('%a %b %d,%l:%M %p') %></td>
    <%top_bid=chore.auction.bids.sort {|a,b| bid_sorter(a,b)}[0]%>
    <%if top_bid %>
      <td><%=top_bid.user.username%></td>
    <%else%>
      <td></td>
    <%end%>
  <%else%>
    <td><%= chore.value %></td>
    <td><%= chore.due_date.strftime('%a %b %d,%l:%M %p') %></td>
    <td></td>
  <%end%>
  <td><%= chore.due_date.strftime('%a %b %d,%l:%M %p') %></td>
  <%if chore.auction %>
    <td><%= link_to 'Show auction', chore.auction %></td>
  <%else%>
    <td><%= link_to 'Show bounty', chore.bounty%></td>
  <%end%>
  <td><%= link_to 'Chore details', chore %></td>
  <td><%= link_to 'Edit chore', edit_chore_path(chore) %></td>
  <%if chore.auction %>
    <td><%= link_to 'Edit auction', edit_auction_path(chore.auction) %></td>
  <%else%>
    <td><%= link_to 'Edit bounty', edit_bounty_path(chore.bounty) %></td>
  <%end%>
  <td><%= link_to 'Destroy chore and auction', "/chores/delete_all/"+chore.id.to_s, :data => { :confirm => 'Are you sure?' } %></td>
  
  <td><%# link_to 'Take', "chores/take/"+chore.id.to_s %></td>
</tr>

