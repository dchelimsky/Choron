<!DOCTYPE html>
<html>
<head>
  <title>Choron</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <div id="user">Logged in as <%= current_user.username %></div>
    <div id="chorons">You have <!--chorons--> chorons.</div>
  <%end%>
<div id="nav">
  <% if current_user %>
    <div class="navtab"><%= link_to "Edit Profile", edit_user_path(current_user.id)%></div>
    <div class="navtab"><%= link_to "Logout", :logout%></div>
    <div class="navtab"><%= link_to "Chores", :chores%></div>
    <div class="navtab"><%= link_to "Users", :users%></div>
    <div class="navtab"><%= link_to "Auctions", :auctions%></div>
    <div class="navtab"><%= link_to "Bids", :bids%></div>
  <% else %>
    <div class="navtab"><%= link_to "Register", new_user_path %></div>
    <div class="navtab"><%= link_to "Login", :login %></div>
  <% end %>
</div>

<div id="main">
<%= yield %>
</div>

</body>
</html>
